{
  "name": "vertebrate-event-emitter",
  "version": "2.0.2",
  "description": "An event emitter implementation robust against memory leaks.",
  "main": "build/index.umd.js",
  "jsnext:main": "build/index.es6.js",
  "files": [
    "build/index.umd.js",
    "build/index.es6.js"
  ],
  "scripts": {
    "build-es6": "rollup index.es6.js > build/index.es6.js",
    "build-umd": "rollup -f umd -n EventEmitter index.es6.js > build/index.umd.js",
    "build": "mkdirp build && npm run build-es6 && npm run build-umd",
    "clean": "rimraf build",
    "prepublish": "npm run build",
    "postpublish": "rimraf build",
    "test": "mkdirp build && rollup -f cjs vertebrate-event-emitter.js > build/test.js && mocha && npm run clean",
    "lint": "eslint ."
  },
  "repository": "qubyte/vertebrate-event-emitter.git",
  "keywords": [
    "mvc",
    "backbone",
    "es6",
    "event",
    "emitter"
  ],
  "author": "Mark S. Everitt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qubyte/vertebrate-event-emitter/issues"
  },
  "homepage": "https://github.com/qubyte/vertebrate-event-emitter",
  "devDependencies": {
    "eslint": "2.2.0",
    "memwatch-next": "0.2.10",
    "mkdirp": "0.5.1",
    "mocha": "2.4.5",
    "rimraf": "2.5.2",
    "rollup": "0.25.4",
    "sinon": "1.17.3"
  }
}
